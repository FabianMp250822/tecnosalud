rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }
    // Allow write access only to the 'article-images' path
    // This rule is intentionally broad for the demo.
    // For a production app, you'd restrict this to authenticated users.
    match /article-images/{allPaths=**} {
      allow write;
    }
  }
}
