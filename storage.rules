rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files so images can be displayed.
    match /{allPaths=**} {
      allow read;
    }

    // Allow the server-side AI flow to write PNG images to the designated folders.
    match /{folder}/{imageId} {
      allow write: if folder in ['article-images', 'site-images'] && request.resource.contentType == 'image/png';
    }
  }
}
